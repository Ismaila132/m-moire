package sn.pad.dao;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import sn.pad.entites.*;
import sn.pad.repository.*;

@Service
public class JournalierDAO 
{
	@Autowired
	private JournalierRepository journalierRepository;
	
	public List<Journalier> listerJournaliers()
	{
		return journalierRepository.findAll();
	}
	@Transactional
	public Journalier creerJournalier(Journalier journalier)
	{
		return journalierRepository.save(journalier);
	}
	@Transactional
	public void modifierJournalier(Journalier journalier)
	{
		journalierRepository.save(journalier);
	}
	
	//méthode pour rechercher journalier
	
	public Journalier rechercherParIdJournalier(Integer matriculeJournalier)
	{
		return journalierRepository.findById(matriculeJournalier).orElse(null);
	}
	
	public Journalier rechercherParTelJournalier(Integer telJournalier) {
        Journalier journalier = journalierRepository.findByTelJournalier(telJournalier);
        if (journalier == null) 
        {
            return null;
        }
        return journalier;
    }
	
	//méthode pour supprimer journalier
	
	@Transactional
	public void supprimerParIdJournalier(Integer matriculeJournalier)
	{
		Journalier journalier=rechercherParIdJournalier(matriculeJournalier);
		if (journalier!=null)
		journalierRepository.delete(journalier);
	}
	
	@Transactional
	public void supprimerParTelJournalier(Integer telJournalier)
	{
		Journalier journalier=rechercherParTelJournalier(telJournalier);
		if (journalier!=null)
		journalierRepository.delete(journalier);
	}
	
	
}
